<div class="content container">
<h2 class="page-title">Support Cases - <span class="fw-semi-bold">List</span></h2>
<div class="row">
    <div class="col-md-12">
        <section class="widget">
            <header>
                <h4>
                    Table <span class="fw-semi-bold">Style</span>
                </h4>
            </header>
            <div class="body">
              <p id="notice"><%= notice %></p>
              <div class="table-responsive">
                  <table class="table table-hover table-striped">
                      <thead>
                        <tr>
                          <th>Name</th>
                          <th>Desc</th>
                          <th>Stage</th>
                          <th>Solution</th>
                          <th>Contact</th>
                          <th>Close date</th>
                          <th>Owner</th>
                          <th colspan="3"></th>
                        </tr>
                      </thead>
                      <tbody>
                        <% @support_cases.each do |support_case| %>
                          <tr>
                            <td><%= support_case.name %></td>
                            <td><%= support_case.desc %></td>
                            <td><%= support_case.stage %></td>
                            <td><%= support_case.solution %></td>
                            <td><%= support_case.contact.full_name %></td>
                            <td><%= support_case.close_date %></td>
                            <td><%= support_case.user.full_name %></td>
                            <td><%= link_to 'Show', support_case %></td>
                            <td><%= link_to 'Edit', edit_support_case_path(support_case) %></td>
                            <td><%= link_to 'Destroy', support_case, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                          </tr>
                        <% end %>
                      </tbody>
                  </table>
              </div>

            </div>
        </section>
    </div>
</div>
