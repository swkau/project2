<p id="notice"><%= notice %></p>

<h1>Listing Contacts</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Desc</th>
      <th>Job position</th>
      <th>Role</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Mobile</th>
      <th>Address1</th>
      <th>Address2</th>
      <th>State</th>
      <th>Country</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contacts.each do |contact| %>
      <tr>
        <td><%= contact.first_name %></td>
        <td><%= contact.last_name %></td>
        <td><%= contact.desc %></td>
        <td><%= contact.job_position %></td>
        <td><%= contact.role %></td>
        <td><%= contact.email %></td>
        <td><%= contact.phone %></td>
        <td><%= contact.mobile %></td>
        <td><%= contact.address1 %></td>
        <td><%= contact.address2 %></td>
        <td><%= contact.state %></td>
        <td><%= contact.country %></td>
        <td><%= contact.status %></td>
        <td><%= link_to 'Show', contact %></td>
        <td><%= link_to 'Edit', edit_contact_path(contact) %></td>
        <td><%= link_to 'Destroy', contact, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

