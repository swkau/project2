<div class="content container">
<h2 class="page-title">Opportunities - <span class="fw-semi-bold">List</span></h2>
<div class="row">
    <div class="col-md-12">
        <section class="widget">
            <header>
                <h4>
                    Table <span class="fw-semi-bold">Style</span>
                </h4>
            </header>
            <div class="body">
              <p id="notice"><%= notice %></p>
              <div class="table-responsive">
                  <table class="table table-hover table-striped">
                      <thead>
                        <tr>
                          <th>Name</th>
                          <th>Description</th>
                          <th>Stage</th>
                          <th>Value</th>
                          <th>Company</th>
                          <th>Contact</th>
                          <th>Owner</th>
                          <th colspan="3"></th>
                        </tr>
                      </thead>
                      <tbody>
                        <% @opportunities.each do |opportunity| %>
                          <tr>
                            <td><%= opportunity.name %></td>
                            <td><%= opportunity.desc %></td>
                            <td><%= opportunity.stage %></td>
                            <td><%= opportunity.value %></td>
                            <td><a href="/accounts/<%= opportunity.account.id if opportunity.account %>"><%= opportunity.account.name %></a></td>
                            <td><a href="/contacts/<%= opportunity.contact.id if opportunity.contact %>"><%= opportunity.contact.full_name %></a></td>
                            <td><%= opportunity.user.full_name %></td>
                            <td><%= link_to 'Show', opportunity %></td>
                            <td><%= link_to 'Edit', edit_opportunity_path(opportunity) %></td>
                            <td><%= link_to 'Destroy', opportunity, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                          </tr>
                        <% end %>
                      </tbody>
                  </table>
              </div>

            </div>
        </section>
    </div>
</div>
