<div class="content container">
<h2 class="page-title">Tables - <span class="fw-semi-bold">Leads</span></h2>
<div class="row">
    <div class="col-md-12">
        <section class="widget">
            <header>
                <h4>
                    Table <span class="fw-semi-bold">Styles</span>
                </h4>
            </header>
            <div class="body">
              <p id="notice"><%= notice %></p>
              <div class="table-responsive">
                  <table class="table table-hover table-striped">
                      <thead>
                      <tr>
                        <th>Name</th>
                        <th>Desc</th>
                        <th>Source</th>
                        <th>Contact name</th>
                        <th>Company name</th>
                        <th>Contact email</th>
                        <th>Phone</th>
                        <th>Owner</th>
                        <th colspan="3"></th>
                      </tr>
                      </thead>
                      <tbody>
                        <% @leads.each do |lead| %>
                          <tr onclick="location.href='/leads/<%= lead.id %>';">
                            <td><%= lead.name %></td>
                            <td><%= lead.desc %></td>
                            <td><%= lead.source %></td>
                            <td><%= lead.contact_name %></td>
                            <td><%= lead.company_name %></td>
                            <td><%= lead.contact_email %></td>
                            <td><%= lead.phone %></td>
                            <td><%= lead.user.full_name %></td>
                            <td><%= link_to 'Edit', edit_lead_path(lead) %></td>
                            <td><%= link_to 'Destroy', lead, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                          </tr>
                        <% end %>
                      </tbody>
                  </table>
              </div>

            </div>
        </section>
    </div>
</div>
