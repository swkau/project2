<p id="notice"><%= notice %></p>

<h1>Listing Leads</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Desc</th>
      <th>Source</th>
      <th>Contact name</th>
      <th>Company name</th>
      <th>Contact email</th>
      <th>Phone</th>
      <th>Owner</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @leads.each do |lead| %>
      <tr>
        <td><%= lead.name %></td>
        <td><%= lead.desc %></td>
        <td><%= lead.source %></td>
        <td><%= lead.contact_name %></td>
        <td><%= lead.company_name %></td>
        <td><%= lead.contact_email %></td>
        <td><%= lead.phone %></td>
        <td><%= lead.user.full_name %></td>
        <td><%= link_to 'Show', lead %></td>
        <td><%= link_to 'Edit', edit_lead_path(lead) %></td>
        <td><%= link_to 'Destroy', lead, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

