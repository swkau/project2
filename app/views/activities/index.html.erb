<div class="content container">
<h2 class="page-title">Activities - <span class="fw-semi-bold">List</span></h2>
<div class="row">
    <div class="col-md-12">
        <section class="widget">
            <header>
                <h4>
                    Table <span class="fw-semi-bold">Style</span>
                </h4>
            </header>
            <div class="body">
              <p id="notice"><%= notice %></p>
              <div class="table-responsive">
                  <table class="table table-hover table-striped">
                      <thead>
                        <tr>
                          <th>Name</th>
                          <th>Type</th>
                          <th>Desc</th>
                          <th>Lead</th>
                          <th>Account</th>
                          <th>Contact</th>
                          <th>Opportunity</th>
                          <th>Support Case</th>
                          <th>Owner</th>
                          <th>Start</th>
                          <th>End</th>
                          <th colspan="3"></th>
                        </tr>
                      </thead>
                      <tbody>
                        <% @activities.each do |activity| %>
                          <tr>
                            <td><%= activity.name %></td>
                            <td><%= activity.activity_type %></td>
                            <td><%= activity.desc %></td>
                            <td><a href="/leads/<%= activity.lead.id if activity.lead %>"><%= activity.lead.name if activity.lead %></a></td>
                            <td><a href="/accounts/<%= activity.account.id if activity.account %>"><%= activity.account.name if activity.account %></a></td>
                            <td><a href="/contacts/<%= activity.contact.id if activity.contact %>"><%= activity.contact.full_name if activity.contact %></a></td>
                            <td><a href="/opportunities/<%= activity.opportunity.id if activity.opportunity %>"><%= activity.opportunity.name if activity.opportunity %></a></td>
                            <td><a href="/support_cases/<%= activity.support_case.id if activity.support_case %>"><%= activity.support_case.name if activity.support_case %></a></td>
                            <td><%= activity.user.full_name if activity.user %></td>
                            <td><%= activity.start %></td>
                            <td><%= activity.end %></td>
                            <td><%= link_to 'Show', activity %></td>
                            <td><%= link_to 'Edit', edit_activity_path(activity) %></td>
                            <td><%= link_to 'Destroy', activity, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                          </tr>
                        <% end %>
                      </tbody>
                  </table>
              </div>

            </div>
        </section>
    </div>
</div>
