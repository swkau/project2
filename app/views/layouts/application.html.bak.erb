<!DOCTYPE html>
<html>
<head>
  <title>Wdicrm</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <% if user_signed_in? %>
  <%= link_to "log out", destroy_user_session_path, method: :delete %>
  <% else %>
  <%= link_to "Log in", new_user_session_path, method: :get %>
  <% end %>
  <%= link_to "Home", root_path %>
  <%= link_to "Leads", leads_path %>
  <%= link_to "Accounts", accounts_path %>
  <%= link_to "Contacts", contacts_path %>
  <%= link_to "Opportunities", opportunities_path %>
  <%= link_to "Support", support_cases_path %>
  <%= link_to "Activities", activities_path %>
<% if notice %>
  <p class="notice"><%= notice %></p>
<% elsif alert %>
  <p class="alert"><%= alert %></p>
<% end %>
<%= yield %>

</body>
</html>
