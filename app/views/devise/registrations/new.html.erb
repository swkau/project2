<div class="single-widget-container">
    <section class="widget login-widget">
        <header class="text-align-center">
            <h4>Sign Up</h4>
        </header>
        <div class="body">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= devise_error_messages! %>
                <fieldset>

                    <div class="form-group">
                        <%= f.label :email %>
                        <div class="input-group">
                            <span class="input-group-addon">
                                <i class="fa fa-user"></i>
                            </span>
                            <%= f.email_field :email, autofocus: true, :class => 'form-control input-lg input-transparent' %>
                        </div>
                    </div>

                    <div class="form-group">
                        <%= f.label :firstname %>
                        <div class="input-group">
                            <span class="input-group-addon">
                                <i class="fa fa-user"></i>
                            </span>
                            <%= f.text_field :first_name, :class => 'form-control input-lg input-transparent' %>
                        </div>
                    </div>

                    <div class="form-group">
                        <%= f.label :lastname %>
                        <div class="input-group">
                            <span class="input-group-addon">
                                <i class="fa fa-user"></i>
                            </span>
                            <%= f.text_field :last_name, :class => 'form-control input-lg input-transparent' %>
                        </div>
                    </div>


                    <div class="form-group">
                        <%= f.label :password %>
                        <% if @minimum_password_length %>
                        <em>(<%= @minimum_password_length %> characters minimum)</em>
                        <% end %>
                        <div class="input-group input-group-lg">
                            <span class="input-group-addon">
                                <i class="fa fa-lock"></i>
                            </span>
                            <%= f.password_field :password, autocomplete: "off", :class => 'form-control input-lg input-transparent' %>
                        </div>
                    </div>

                    <div class="form-group">
                        <%= f.label :password_confirmation %>
                        <div class="input-group input-group-lg">
                            <span class="input-group-addon">
                                <i class="fa fa-lock"></i>
                            </span>
                            <%= f.password_field :password_confirmation, autocomplete: "off", :class => 'form-control input-lg input-transparent' %>
                        </div>
                    </div>

                </fieldset>

                <div class="form-actions">
                        <%= f.submit "Sign Up", :class => 'btn btn-block btn-lg btn-danger' %>

                <h4><%= render "devise/shared/links" %></h4>
              </div>

              <% end %>
        </div>

    </section>
</div>
